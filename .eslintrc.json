{
  "env": {
    "browser": true,
    "commonjs": true,
    "webextensions": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "chrome": true
  },
  "rules": {
    "no-console": [
      0
    ],
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
